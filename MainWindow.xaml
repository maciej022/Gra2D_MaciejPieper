<Window x:Class="Gra2D.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gra 2D" Height="450" Width="800"
        KeyDown="OknoGlowne_KeyDown">
    <Grid>
        <!-- Siatka mapy -->
        <Grid x:Name="SiatkaMapy" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="10"/>
        
        <!-- Panel boczny z przyciskami (przycisk wczytaj mapę poniżej, inne przyciski na górze) -->
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="10">
            
            <!-- Sekcja wyboru rozmiaru mapy -->
            <TextBlock Text="Rozmiar mapy:" FontWeight="Bold" Margin="5"/>
            <Button Content="Mały" Tag="mala" Click="WybierzRozmiar_Click" Margin="5" Width="120"/>
            <Button Content="Średni" Tag="srednia" Click="WybierzRozmiar_Click" Margin="5" Width="120"/>
            <Button Content="Duży" Tag="duza" Click="WybierzRozmiar_Click" Margin="5" Width="120"/>

            <!-- Sekcja wyboru trudności -->
            <TextBlock Text="Trudność:" FontWeight="Bold" Margin="5"/>
            <Button Content="Łatwy" Tag="latwy" Click="WybierzTrudnosc_Click" Margin="5" Width="120"/>
            <Button Content="Średni" Tag="sredni" Click="WybierzTrudnosc_Click" Margin="5" Width="120"/>
            <Button Content="Trudny" Tag="trudny" Click="WybierzTrudnosc_Click" Margin="5" Width="120"/>
            
            <!-- Przycisk Wczytaj mapę (powiększony i z innym kolorem) -->
            <Button Content="Wczytaj mapę" Click="WczytajMape_Click" Margin="20" Width="150" Height="50" Background="DarkGreen" Foreground="White" FontSize="16"/>
        </StackPanel>

        <!-- Etykiety z wynikami -->
        <StackPanel Orientation="Vertical" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="10">
            <Label Name="EtykietaDrewna" Content="Drewno: 0" FontWeight="Bold" Margin="5"/>
            <Label Name="EtykietaDiamenty" Content="Diamenty: 0" FontWeight="Bold" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>